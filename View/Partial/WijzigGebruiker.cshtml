@using Model
@model Gebruiker
@{
    ViewData["Title"] = "Edit Gebuiker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-4">
        <h2>Edit Platform</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.GebruikerID"></label>
                <input asp-for="@Model.GebruikerID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Voornaam"></label>
                <input asp-for="@Model.Voornaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Achternaam"></label>
                <input asp-for="@Model.Achternaam" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.hetGeslacht"></label>
                <select asp-for="@Model.hetGeslacht" asp-items="@{Html.GetEnumSelectList<Gebruiker.Geslacht>();}" class="form-control">
                    <option value="0">None</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Geboortedatum" class="control-label col-sm-3"></label>
                <div class="col-sm-10 input-smal">
                    <input asp-for="@Model.Geboortedatum" class="form-control col-sm-10" type="date" />
                </div>
            </div>
            <div class="form-group">

            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
