@model Model.Gebruiker

<head>
    <link href="~/css/LoginStyleSheet.css" rel="stylesheet" />
</head>
<form asp-action="CheckLogin" asp-controller="Home" method="post" class="form-horizontal">
    <fieldset>
        <legend></legend>
        <div class="form-group">
            <label class="control-label col-sm-3" asp-for="@Model.Gebruikersnaam"></label>
            <div class="col-sm-5 input-group">
                <input class="form-control" type="text" asp-for="@Model.Gebruikersnaam" placeholder="Gebruikersnaam" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" asp-for="@Model.Wachtwoord"></label>
            <div class="col-sm-5 input-group">
                <input class="form-control" type="password" asp-for="@Model.Wachtwoord" placeholder="Wachtwoord" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">&nbsp;</label>
            <div class="col-sm-5 input-group-btn">
                <input type="submit" value="Log In" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
</form>

