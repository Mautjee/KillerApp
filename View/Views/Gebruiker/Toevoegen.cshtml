@model Model.Gebruiker
@{
    ViewData["Title"] = "Toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Post" enctype="multipart/form-data" method="post" class="form-horizontal">
    <fieldset>
        <legend></legend>
        <div class="form-group">
            <label class="control-label col-sm-3" for="UserName">Username: </label>
            <div class="col-sm-5 input-breed">
                <input class="form-control" type="text" id="UserName" name="UserName"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="Wachtwoord">Wachtwoord: </label>
            <div class="col-sm-5 input-smal">
                <input class="form-control" type="password" id="Wachtwoord" name="Wachtwoord" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="DeVoornaam">Voornaam:</label>
            <div class="col-sm-5 input-breed">
                <input class="form-control" type="text" id="DeVoornaam" name="DeVoornaam" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="DeAchternaam">Achternaam:</label>
            <div class="col-sm-5 input-breed">
                <input class="form-control" type="text" id="DeAchternaam" name="DeAchternaam" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3" for="Email">Email:</label>
            <div class="col-sm-5 input-smal">
                <input class="form-control" type="text" id="Email" name="Email"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">&nbsp;</label>
            <div class="col-sm-10">
                <input type="submit" value="Verstuur" class="btn btn-default" />
                <a asp-area="" asp-controller="Gebruiker" asp-action="index" class="btn btn-default">ANNULEER</a>
            </div>
        </div>
    </fieldset>
</form>
