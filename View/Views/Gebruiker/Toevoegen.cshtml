@model Model.Gebruiker
@{
    ViewData["Title"] = "Toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
<div class="form-group">
    @Html.LabelFor(m => m.Gebruikersnaam, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10 input-breed">
        @Html.TextBoxFor(m => m.Gebruikersnaam, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gebruikersnaam)
    </div>
 </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Wachtwoord)
        @Html.TextBoxFor(m => m.Wachtwoord, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Wachtwoord)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    }
