@model Model.Gebruiker

@{
    ViewData["Title"] = "GebruikerDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GebruikerDetail</h2>
<div class="row">
    <div class="col-sm-4">
        <form asp-action="" method="post">
            <div class="form-group">
                <label asp-for="@Model.GebruikerID" class="control-label col-sm-3"></label>
                <input asp-for="@Model.GebruikerID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Gebruikersnaam" class="control-label col-sm-3"></label>
                <input asp-for="@Model.Gebruikersnaam" class="form-control col-sm-10" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Voornaam" class="control-label col-sm-3"></label>
                <input asp-for="@Model.Voornaam" class="form-control col-sm-10" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Achternaam" class="control-label col-sm-3"></label>
                <input asp-for="@Model.Achternaam" type="text" class="form-control col-sm-10" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.hetGeslacht" class="control-label col-sm-3"></label>
                <select asp-for="@Model.hetGeslacht" asp-items="@{Html.GetEnumSelectList<Model.Gebruiker.Geslacht>();}" class="form-control col-sm-10">
                    <option value="0">None</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Gebortendatum" class="control-label col-sm-3"></label>
                <div class="col-sm-10 input-smal">
                    <input asp-for="@Model.Gebortendatum" class="form-control col-sm-10" type="date" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label col-sm-3"></label>
                <input asp-for="@Model.Email" class="form-control col-sm-10" />
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <label class="control-label col-sm-3">&nbsp;</label>
                <div class="col-sm-10">
                    <input type="submit" value="Verstuur" class="btn btn-default" />
                    <a asp-area="" asp-controller="Gebruiker" asp-action="index" class="btn btn-default">ANNULEER</a>
                </div>
            </div>
        </form>
    </div>
</div>